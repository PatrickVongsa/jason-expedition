<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
		           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<div class="container-fluid">
			<div class="row">
				<div class="side-menu d-flex flex-column col-2 bg-primary">
                   {% include "components/side_menu.html.twig" %}
				</div>
				<div class="main-page col-10">{# contenu #}
					{% block body %}{% endblock %}
				</div>
			</div>

		</div>
	</body>
</html>

