{% extends 'base.html.twig' %}

{% block title %}Applier index{% endblock %}

{% block body %}
    <h1>Applier index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Age</th>
                <th>Height</th>
                <th>Origin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for applier in appliers %}
            <tr>
                <td>{{ applier.id }}</td>
                <td>{{ applier.firstname }}</td>
                <td>{{ applier.lastname }}</td>
                <td>{{ applier.age }}</td>
                <td>{{ applier.height }}</td>
                <td>{{ applier.origin }}</td>
                <td>
                    <a href="{{ path('applier_show', {'id': applier.id}) }}">show</a>
                    <a href="{{ path('applier_edit', {'id': applier.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('applier_new') }}">Create new</a>
{% endblock %}
